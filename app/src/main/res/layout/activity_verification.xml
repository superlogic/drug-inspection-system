<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:mContext="com.technoxol.mandepos.VerificationActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="5dp"
            app:cardElevation="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mp"
                    android:textColor="@color/cyan"
                    android:textStyle="bold"
                    android:textSize="30sp"
                    android:layout_marginTop="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mp_abr"
                    android:textColor="@color/cyan"
                    android:textStyle="bold"
                    android:textSize="11sp"
                    android:layout_marginBottom="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Verification"
                    android:textSize="20sp"
                    android:layout_marginBottom="50dp"/>

                <EditText
                    android:id="@+id/cnicET"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:background="@drawable/edit_text_rounded_box"
                    android:hint="CNIC"
                    android:textColorHint="@color/cyan"
                    android:paddingLeft="20dp"
                    android:textSize="14sp"
                    android:inputType="textEmailAddress"
                    android:layout_marginBottom="20dp"/>

                <EditText
                    android:id="@+id/regET"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:background="@drawable/edit_text_rounded_box"
                    android:hint="REG No."
                    android:textColorHint="@color/cyan"
                    android:paddingLeft="20dp"
                    android:inputType="text"
                    android:textSize="14sp"
                    android:layout_marginBottom="20dp"/>

                <Button
                    android:id="@+id/loginBtn"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:background="@drawable/primary_btn"
                    android:hint="Submit"
                    android:textColorHint="@color/white"
                    android:inputType="textPassword"
                    android:layout_marginBottom="40dp"
                    android:onClick="onClickSubmit"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </ScrollView>

</RelativeLayout>
